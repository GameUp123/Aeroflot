                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                        Storyboard.TargetProperty="Width"
                        From="25" To="27" Duration="0:0:0.2"/>

                                            <DoubleAnimation
                        Storyboard.TargetProperty="Width"
