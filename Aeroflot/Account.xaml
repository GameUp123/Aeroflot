            </StackPanel>
        </DockPanel>
        <DockPanel Margin="318,0,321,0" Height="256" VerticalAlignment="Bottom" Grid.Row="1">
        </DockPanel>
        <Canvas Margin="0,0,7,4">
            <!-- Гамбургер -->
            <ToggleButton x:Name="HamburgerButton"
                   Width="40" Height="40"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Unchecked="HamburgerButton_Unchecked"
                   Checked="HamburgerButton_Checked"
                   Background="Black"
                   BorderBrush="{x:Null}"
                   Cursor="Hand" Foreground="Black" Canvas.Left="10" Canvas.Top="24">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid Background="Transparent">
                            <!-- Весь фон кликабельный -->
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Rectangle x:Name="Line1" Fill="Black" Height="4" Width="25" Grid.Row="0">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>

                                <Rectangle x:Name="Line2" Fill="Black" Height="4" Width="25" Grid.Row="2">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>

                                <Rectangle x:Name="Line3" Fill="Black" Height="4" Width="25" Grid.Row="4" Cursor="Hand">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Line1"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                      To="-2" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Line3"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                      To="2" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Line1"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                      To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Line3"
                      Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                      To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>

            <!-- Меню -->
            <StackPanel x:Name="MenuStack"
             Orientation="Vertical"
                Width="178" Height="228"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Canvas.Top="55" Canvas.Left="0"
                Visibility="Collapsed">
                <Button x:Name="Glav" Margin="5" BorderBrush="Black" Background="White" Foreground="White"
                        FontFamily="Century Gothic" FontSize="16" Width="160" FontWeight="Bold" Height="48" Click="Button_Click_Glav" >
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2" CornerRadius="15">
                                <Grid>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
                                        <Image Source="/free-icon-home-7133312.png" Width="45" Height="38" VerticalAlignment="Center"/>
                                        <TextBlock Text="Главное меню" Foreground="Black" FontSize="14" VerticalAlignment="Center"  Margin="0,0,5,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <!--  анимации  -->
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" From="160" To="165" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" From="165" To="160" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="ButtonBase.Click">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                            From="LightGray" To="White" Duration="0:0:0.5">
                                                <ColorAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="UIElement.MouseLeftButtonUp">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                            From="LightGray" To="White" Duration="0:0:0.5">
                                                <ColorAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="ExitButton"  Margin="5" BorderBrush="Black" Background="White" Foreground="White"
FontFamily="Century Gothic" FontSize="16" Width="160" FontWeight="Bold" Height="48"
Click="ExitAccount_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="2" CornerRadius="15">
                                <Grid>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
                                        <Image Source="/Image/exit.png" Width="53" Height="25"/>
                                        <TextBlock Text="Выход" Foreground="Black"  VerticalAlignment="Center" FontSize="14" FontWeight="Bold"
                                HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <!-- Наведение -->
                                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" From="160" To="165" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <!-- Уход курсора -->
                                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" From="165" To="160" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <!-- Клик -->
                                <EventTrigger RoutedEvent="ButtonBase.Click">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
            From="LightGray" To="White" Duration="0:0:0.5">
                                                <ColorAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <!-- Отпускание кнопки -->
                                <EventTrigger RoutedEvent="UIElement.MouseLeftButtonUp">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
            From="LightGray" To="White" Duration="0:0:0.5">
                                                <ColorAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseInOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Canvas>
