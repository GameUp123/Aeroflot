                </StackPanel>
            </DockPanel>

        </Grid>
        <DockPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="360" Margin="0,26,0,0" >
            <Border Background="White" CornerRadius="40" VerticalAlignment="Bottom"
                    Margin="0,44,0,0" Padding="5,2" Width="904" Height="315" Grid.Row="1">
                <TextBlock Text="Ваш следующий отпуск начинается здесь" Foreground="Black" FontSize="30" FontWeight="Bold" TextAlignment="Center" Margin="0,4,244,263"  />
            </Border>
        </DockPanel>



        <Canvas Margin="0,0,7,4">
            <!-- Гамбургер -->
            <ToggleButton x:Name="HamburgerButton"
              Width="40" Height="40"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Unchecked="HamburgerButton_Unchecked"
              Checked="HamburgerButton_Checked"
              Background="Black"
              BorderBrush="{x:Null}"
              Cursor="Hand" Foreground="Black" Canvas.Left="10" Canvas.Top="24">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid Background="Transparent">
                            <!-- Весь фон кликабельный -->
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Rectangle x:Name="Line1" Fill="Black" Height="4" Width="25" Grid.Row="0">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>

                                <Rectangle x:Name="Line2" Fill="Black" Height="4" Width="25" Grid.Row="2">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>

                                <Rectangle x:Name="Line3" Fill="Black" Height="4" Width="25" Grid.Row="4" Cursor="Hand">
                                    <Rectangle.RenderTransform>
                                        <TranslateTransform/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Grid>
                        </Grid>


                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Line1"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     To="-2" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Line3"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     To="2" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Line1"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Line3"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Width="116" Canvas.Left="55" Canvas.Top="29" Height="28" FontFamily="Century Gothic" FontSize="24" FontWeight="Bold" Text=" 🡸 Меню">

            </TextBlock>
