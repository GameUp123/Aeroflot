<Window x:Class="Aeroflot.Glav"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:Aeroflot"
            mc:Ignorable="d" Height="700" Width="1100"
            WindowStyle="None"
            ResizeMode="NoResize"
            WindowStartupLocation="CenterScreen"
            AllowsTransparency="True" Background="{x:Null}" 
            MouseDown="Window_MouseDown">


    <Grid>

        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2">

            <!-- Слой для изображения -->
            <Border BorderBrush="Transparent" BorderThickness="0" CornerRadius="13">
                <Border.Background>
                    <ImageBrush ImageSource="/Image/sky.jpg"
                   Stretch="UniformToFill"  />
                </Border.Background>
            </Border>

            <!-- Слой с полупрозрачным белым фоном -->
            <Rectangle Fill="White" Opacity="0.5" RadiusX="12" RadiusY="12" />
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Right" Height="45" Margin="0,-8,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,10">
                    <Button x:Name="ButtonRoll" Content="-" Click="Button_Click" Background="White" BorderBrush="White" Foreground="Black" Height="25" Width="25">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border BorderBrush="Transparent" BorderThickness="1" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="25" To="27" Duration="0:0:0.2"/>

                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="25" To="27" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="27" To="25" Duration="0:0:0.2"/>

                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="27" To="25" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="ButtonOkno" Content="⬜" Click="Button_Click2" Background="White" BorderBrush="White" Foreground="Black" Width="25">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border BorderBrush="Transparent" BorderThickness="1" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="25" To="27" Duration="0:0:0.2"/>

                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="25" To="27" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="27" To="25" Duration="0:0:0.2"/>

                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="27" To="25" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="ButtonExit" Content="X" Click="Button_Click1" Background="White" BorderBrush="White" Foreground="Black" Height="25" Width="25">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border BorderBrush="Transparent" BorderThickness="1" Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="25" To="27" Duration="0:0:0.2"/>

                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="25" To="27" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="27" To="25" Duration="0:0:0.2"/>

                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Width"
                                                    From="27" To="25" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
